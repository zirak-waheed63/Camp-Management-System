<h2>Step Two</h2>
<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="<%=@progress %>"
  aria-valuemin="0" aria-valuemax="100" style="width: <%=@progress %>%">
  </div>
</div>
<%= form_for @camp_application, url: wizard_path, method: :put do |f| %>
  <div class="field">
      <%= f.label :step_two %><br />
      <%= f.text_field :step_two %>
    </div>

    <div class="actions">
      <%= f.submit "done"%>
    </div>
<%end %>
<%= link_to 'back', previous_wizard_path %> | <%= link_to 'skip', next_wizard_path %>
