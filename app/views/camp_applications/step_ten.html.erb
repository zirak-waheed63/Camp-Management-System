<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="<%=@progress %>"
  aria-valuemin="0" aria-valuemax="100" style="width: <%=@progress %>%">
  </div>
</div>
<%= form_for @camp_application, url: wizard_path, method: :put do |f| %>
  <div class="field">
      <%= f.label :step_ten %><br />
      <%= f.text_field :step_ten, required: true %>
    </div>

    <div class="actions">
      <%= f.submit "Finish & Submit", data: {confirm: "You cannot edit application after submission"} %>
    </div>
<%end %>
<%= link_to 'back', previous_wizard_path %>