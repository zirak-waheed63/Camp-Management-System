<h2>Step Two</h2>
<%= render partial: 'shared/progressbar', locals: { current_step: 'step_two' } %>
<%= form_for @camp_application, url: wizard_path, method: :put do |f| %>
  <div class="field">
    <%= f.label :step_two %><br />
    <%= f.text_field :step_two, required: true %>
  </div>

  <label>Overseas: </label>
  <input type="checkbox" id="overseas">
  
  <div id="overseas-fields" class="hidden">
    <div class="field">
      <label>Country: </label><br>
      <%= f.text_field :step_three%>
    </div>

    <div class="field">
      <label>City: </label><br />
      <%= f.text_field :step_four%>
    </div>
  </div>

  <br>
  <label>Government Officer:</label>
  <input type="checkbox" id="officer">
  
  <div id="officers-fields" class="hidden">
    <div class="field">
      <label>Designation: </label><br />
      <%= f.text_field :step_five %>
    </div>

    <div class="field">
      <label>Rank: </label><br />
      <%= f.text_field :step_six %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "done" %>
  </div>
<% end %>
<%= link_to 'back', previous_wizard_path %> | <%= link_to 'skip', next_wizard_path %>
