<%= form_with(model: camp, local: true) do |form| %>
  <%= render 'shared/errors', object: camp %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_field :start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_field :end_date %>
  </div>

  <div class="field">
    <%= form.label :locations %><br>
    <%= collection_check_boxes(:camp, :camp_location_ids, CampLocation.all, :id, :name) do |b| %>
      <div class="row">
        <%= b.label(class: "check_box") do %>
          <div class="col-xs-4">
            <%= b.check_box(class: "check_box") %>
          </div>

          <div class="col-xs-8">
            <%= b.object.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
