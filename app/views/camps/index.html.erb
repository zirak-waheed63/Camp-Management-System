<h1>Camps</h1>

<table>
  <thead>
    <tr class="row">
      <th class="col col-sm-1">Id</th>
      <th class="col col-sm-2">Name</th>
      <th class="col col-sm-1">Start date</th>
      <th class="col col-sm-1">End date</th>
      <th colspan="3" class="col col-sm-3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @camps.each do |camp| %>
      <tr class="row">
        <td class="col col-sm-1"><%= camp.id %></td>
        <td class="col col-sm-2"><%= camp.name %></td>
        <td class="col col-sm-2"><%= camp.start_date %></td>
        <td class="col col-sm-2"><%= camp.end_date %></td>
        <td><%= link_to 'Show', camp %></td>
        <td><%= link_to 'Edit', edit_camp_path(camp) %></td>
        <td><%= link_to 'Destroy', camp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <%if camp.status? %>
            <%=link_to :Active, toggle_status_camp_path(camp), method: :patch, class: 'btn btn-sm btn-success active',
                       data: {confirm: "are you sure to deactivate camp?"}%>
          <%else %>
            <%=link_to :Inactive, toggle_status_camp_path(camp), method: :patch, class: 'btn btn-sm btn-danger active',
                       data: {confirm: 'are you sure to activate camp?'}%>
          <%end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

