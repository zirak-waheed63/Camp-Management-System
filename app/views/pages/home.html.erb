<h1>All available camps</h1>

<table>
  <thead>
    <tr class="row">
      <th class="col col-sm-2">Name</th>
      <th class="col col-sm-1">Start date</th>
      <th class="col col-sm-1">End date</th>

    </tr>
  </thead>

  <tbody>
    <% @camps.each do |camp| %>
      <tr class="row">
        <td class="col col-sm-2"><%= camp.name %></td>
        <td class="col col-sm-2"><%= camp.start_date %></td>
        <td class="col col-sm-2"><%= camp.end_date %></td>
        <%unless is_started?(camp) %>
        <td><%= link_to 'Start', introduction_camp_path(camp), class: "btn-outline-light btn-xs btn-info active" %></td>
        <%end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Dashboard', dashboard_path, class: "btn btn-primary active" %>
