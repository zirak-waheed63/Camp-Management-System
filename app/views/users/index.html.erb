
<h1>All Users</h1>

<table>
  <thead>
    <tr class="row">
      <th class="col col-md-3">Name</th>
      <th class="col col-md-4">Email</th>
      <th class="col col-md-2">Country</th>
      <th class="col col-md-3">Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="row">
        <td class="col col-md-3"><%= user.first_name+ ' ' + user.middle_name + ' ' + user.last_name %></td>
        <td class="col col-md-4"><%= user.email %></td>
        <td class="col col-md-2"><%= user.country %></td>
        <td class="col col-md-3"><%= user.phone_number %></td>
        <td><%= link_to 'Show', '#' %></td>
        <td><%= link_to 'Edit', '#' %></td>
<!--        <td><%#= link_to 'Show', user %></td>-->
<!--        <td><%#= link_to 'Edit', edit_user_path(user) %></td>-->
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

