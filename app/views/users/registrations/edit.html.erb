<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div>
      <% if @user.avatar.attached? %>
        <img src="<%= url_for(@user.avatar) %>" class="img-circle img-responsive" style="height: 200px; width: 200px">
      <% end %>
    </div>
    <div class="field">
      <%= f.label :profile_picture %><br />
      <%= f.file_field :avatar %>
    </div>
    <div class="field">
      <%= f.label :first_name, 'First Name*' %><br />
      <%= resource.errors.full_messages_for(:first_name).join(', ') %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", required: true %>
    </div>

    <div class="field">
      <%= f.label :middle_name, 'Middle Name' %><br />
      <%= resource.errors.full_messages_for(:middle_name).join(', ') %>
      <%= f.text_field :middle_name, autofocus: true, autocomplete: "middle_name" %>
    </div>

    <div class="field">
      <%= f.label :last_name, 'Last Name*' %><br />
      <%= resource.errors.full_messages_for(:last_name).join(', ') %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", required: true %>
    </div>

    <div class="field">
      <%= f.label :country, 'Country*' %><br />
      <%= resource.errors.full_messages_for(:country).join(', ') %>
      <%= f.country_select :country %>
    </div>

    <div class="field">
      <%= f.label :phone_number, 'Phone Number*' %><br />
      <%= resource.errors.full_messages_for(:phone_number).join(', ') %>
      <%= f.telephone_field :phone_number, required: true %>
    </div>
    <div class="field">
      <%= f.label :email, 'Email*' %><br />
      <%= resource.errors.full_messages_for(:email).join(', ') %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, 'Password' %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <%= resource.errors.full_messages_for(:password).join(', ') %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, 'Password Confirmation' %><br />
      <%= resource.errors.full_messages_for(:password_confirmation).join(', ') %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password, 'Current Password*' %> <i>(we need your current password to confirm your changes)</i><br />
      <%= resource.errors.full_messages_for(:current_password).join(', ') %>
      <%= f.password_field :current_password, autocomplete: "current-password", required: true %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
<% end %>

<%= link_to "Back", :back %>
