<h2>Show User Profile</h2>

<div class="container">

  <div>
    <%if @user.avatar.attached? %>
      <img src="<%=url_for(@user.avatar)%>" class="img-circle img-responsive" style="height: 200px; width: 200px">
    <%end %>
  </div>
  <div class="field">
     <b>Name:</b>
    <%= @user.first_name + ' '%>
    <%if @user.middle_name.present? %>
      <%= @user.middle_name + ' '%>
    <%end %>
    <%=@user.last_name%>
  </div>
<!--  <div class="field">-->
<!--    <b>Country:</b>-->
    <%#= country_name(@user.country) %>
<!--  </div>-->

<!--  <div class="field">-->
<!--    <b>Phone Number:</b>-->
    <%#= @user.phone_number%>
<!--  </div>-->

  <div class="field">
    <b>Email:</b>
    <%= @user.email%>
  </div>

  <%= link_to 'Edit User', edit_user_path(@user), class:'btn btn-primary' %>
</div>